<!DOCTYPE html>
<html>
<head>
  <title>StarTours</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>

        </button>
  <!--       <a class="navbar-brand" href="#"><img alt="Brand"
          src="http://icons.iconarchive.com/icons/iron-devil/star-fighter/32/Death-star-icon.png"></a> -->
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav nav-pills">

          <!-- <% if !current_user %> -->

          <li role="presentation" class="active"><a href="<%= new_user_url %>">Sign Up<span class="sr-only">(current)</span></a></li>
          <li><a href="<%= new_session_url %>">Sign In</a></li>

          <!-- <% end %> -->

          <li class="dropdown">
            
            <% if current_user %>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Welcome, <%= current_user.username %> <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Home", root_url %></li>
              <li><%= link_to "Browse Locations", locations_url %></li>
              <li><%= link_to "Add a Location", new_location_url %></li>
              <li class="divider"></li>
              <li><%= link_to "Log Out", session_url, method: :delete %></li>
            </ul>
            <% end %>
          </li>
        </ul>


          <ul class="nav navbar-nav navbar-right">
          <li><a href="#">Star Tours</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">Action</a></li>
              <li class="divider"></li>

              <li><a href="#">Separated link</a></li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

<%= render partial: "layouts/errors" %>
<%= yield %>

</body>
</html>
