<!DOCTYPE html>
<html>
<head>
  <title>StarTours</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>

        </button>
  <!--       <a class="navbar-brand" href="#"><img alt="Brand"
          src="http://icons.iconarchive.com/icons/iron-devil/star-fighter/32/Death-star-icon.png"></a> -->
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav nav-pills">

          <!-- <% if !current_user %> -->

          <li role="presentation" class="active"><a href="<%= new_user_url %>">Sign Up<span class="sr-only">(current)</span></a></li>
          <li><a href="<%= new_session_url %>">Sign In</a></li>

          <!-- <% end %> -->

          <li class="dropdown">
            
            <% if current_user %>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.username %> <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">Action</a></li>
              <li><a href="#">Another action</a></li>
              <li><a href="#">Something else here</a></li>
              <li class="divider"></li>
              <li><a href="#">Separated link</a></li>
              <li class="divider"></li>
              <li><a href="#">One more separated link</a></li>
            </ul>
            <% end %>
          </li>
        </ul>


          <ul class="nav navbar-nav navbar-right">
          <li><a href="#">Star Tours</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">Action</a></li>
              <li class="divider"></li>

              <li><a href="#">Separated link</a></li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
<%= render partial: "layouts/navbar" %>
<%= render partial: "layouts/errors" %>
<%= yield %>

</body>
</html>
