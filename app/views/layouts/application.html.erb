<!DOCTYPE html>
<html>
<head>
  <title>Star Tours</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag :application,  
    "http://maps.googleapis.com/maps/api/js?sensor=false" %>  
  <%= csrf_meta_tags %>
  <link rel="shortcut icon" href="Shuttle.ico">
  
</head>
<body>
<nav class="navbar navbar-default" role="navigation" style="margin: 0">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>

        </button>
        <img alt="Brand" class="navbar-brand"
          src="http://img.brothersoft.com/icon/softimage/s/star_trek-_hidden_evil-251573-1245825295.jpeg">
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav nav-pills">

          <!-- <% if !current_user %> -->

          <li role="presentation" class="active"><a href="<%= new_user_url %>">Sign Up<span class="sr-only">(current)</span></a></li>
          <li><a href="<%= new_session_url %>">Sign In</a></li>

          <!-- <% end %> -->

          <li class="dropdown">
            
            <% if current_user %>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Welcome, <%= current_user.username %> <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Home", root_url %></li>
              <li><%= link_to "Browse Locations", "#master/" %></li>
              <li><%= link_to "Browse Locations (JSON)", api_locations_url %></li>
              <li><%= link_to "Add a Location", "#locations/new" %></li>
              <!-- <li><%= link_to "Add a Location", new_api_location_url %></li> -->
              <li class="divider"></li>
              <li><%= link_to "Log Out", session_url, method: :delete %></li>
            </ul>
            <% end %>
          </li>
        </ul>


          <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Star Tours <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#about">About</a></li>
              <li class="divider"></li>

              <li><a href="#contact">Contact</a></li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

<%= render partial: "layouts/errors" %>
<%= yield %>

</body>
</html>
