<h1>Edit Location Page</h1>

<div class="container">
<form class="location-form">

	<label for="title">Title</label>
	<input type="text" name="location[title]" id="title" value="<%= location.escape('title') %>">
	<br>

	<label for="description">Description</label>
	<textarea rows="15" cols="50" name="location[description]" id="description"><%= location.escape('description') %>
	</textarea>
  <br>

	<label for="address">Address</label>
	<input type="text" name="location[address]" id="address" value="<%= location.escape('address') %>">
  <br>

  <label for="price">Price</label>
	<input type="text" name="location[price]" id="price" value="<%= location.escape('price') %>">
  <br>
  <br>
	<input type="submit" value="Update Location!">

</form>
</div>